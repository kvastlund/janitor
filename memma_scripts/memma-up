#!/bin/bash

#---------------------------------------------------------------------------------------------------------------------
# A little bash script to make upgrading all the stuff easier :)
#---------------------------------------------------------------------------------------------------------------------

trap "echo; exit" INT

#------->NEWS!<-------------------------------------------------------------------------------------------------------

echo -e "\e[35m"
paru -Pw
echo -e "\e[0m"

#------->update official and AUR<-------------------------------------------------------------------------------------

paru -Syu --upgrademenu --removemake --cleanafter

#------->paccache<----------------------------------------------------------------------------------------------------

memma-paccache

#------->pacdiff<-----------------------------------------------------------------------------------------------------

echo "Checking for .pacnew files..."

sudo -E DIFFPROG=kdiff3 pacdiff

#------->Goodbye<-----------------------------------------------------------------------------------------------------

echo -e "\n\e[1;35mThank you for upgrading me! See you soon i hope ;)\e[0m\n"

#---------------------------------------------------------------------------------------------------------------------
